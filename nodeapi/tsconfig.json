{
    "sourceMap": true,
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": ["node", "express", "cors", "jsonwebtoken"],
        "strict": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    },
    "exclude": ["src/test"]
}